<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/l1"
            android:layout_width="@dimen/_40mdp"
            android:layout_height="@dimen/_40mdp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_circle"
            android:backgroundTint="#A6A6A6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/l2"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_rectangle"
            android:backgroundTint="#A6A6A6"
            app:layout_constraintStart_toEndOf="@+id/l1"
            app:layout_constraintTop_toTopOf="@+id/l1" />

        <View
            android:id="@+id/l3"
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_rectangle"
            android:backgroundTint="#A6A6A6"
            app:layout_constraintBottom_toBottomOf="@+id/l1"
            app:layout_constraintStart_toStartOf="@+id/l2"
            app:layout_constraintTop_toBottomOf="@+id/l2" />

        <View
            android:id="@+id/l4"
            android:layout_width="0dp"
            android:layout_height="@dimen/_220mdp"
            android:layout_marginTop="6dp"
            android:background="@drawable/trans_rectangle"
            android:backgroundTint="#A6A6A6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l1" />

        <View
            android:id="@+id/l5"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/trans_rectangle"
            android:backgroundTint="#A6A6A6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l4" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>